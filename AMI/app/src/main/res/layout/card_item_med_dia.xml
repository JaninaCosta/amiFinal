<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="1dp"
    android:orientation="horizontal"
    card_view:cardCornerRadius="1dp"
    card_view:cardUseCompatPadding="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:padding="4dp"
        android:background="?android:selectableItemBackground"
        android:layout_margin="7dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="41dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/hora1"
            android:inputType="number"
            android:textColor="?android:attr/editTextColor"
            android:text="15"
            android:textSize="19sp" />

        <Button
            android:text="Ver Detalles"
            android:layout_width="140dp"
            android:id="@+id/btnVerDetalled2"
            android:textColor="#424242"
            android:layout_marginTop="18dp"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:id="@+id/idName"
            android:textSize="21sp"
            android:textColor="@android:color/black"

            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" />

        <TextView
            android:text=":"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/editTextColor"
            android:layout_alignBottom="@+id/hora1"
            android:layout_toEndOf="@+id/hora1"
            android:id="@+id/textView8"
            android:textSize="18sp"/>

        <TextView
            android:text="00"
            android:textSize="19sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView8"
            android:textColor="?android:attr/editTextColor"
            android:layout_toEndOf="@+id/textView8"
            android:inputType="number"
            android:id="@+id/hora2" />
        <TextView
            android:text="PM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/editTextColor"
            android:textSize="18sp"
            android:layout_alignBottom="@+id/hora2"
            android:layout_toEndOf="@+id/hora2"
            android:id="@+id/fm" />
        <TextView
            android:text="2/10 dosis tomadas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/progreso"
            android:layout_marginTop="70dp"
            android:layout_alignStart="@+id/hora1" />
    </RelativeLayout>

</android.support.v7.widget.CardView>