<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--name-->

        <!--dias-->

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Días del tratamiento"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="20dp"
            android:textSize="21sp"
            android:layout_marginTop="45dp"
            android:textColor="#424242"
            android:layout_marginEnd="21dp" />
        <TextView
            android:id="@+id/diasMedicamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Días del tratamiento"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="20dp"
            android:textSize="18sp"
            android:layout_marginTop="80dp"    />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_dias"
            android:id="@+id/ic_dias"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="60dp" />

        <!--dosis-->

        <TextView
            android:id="@+id/lblDias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dosis del Medicamento"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="20dp"
            android:textSize="21sp"
            android:textColor="#424242"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="21dp" />

        <TextView
            android:id="@+id/dosis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dosis del Medicamento"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="20dp"
            android:textSize="18sp"
            android:layout_marginTop="185dp"
            android:layout_marginEnd="21dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_dosis"
            android:id="@+id/ic_dosis"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="165dp" />

        <!--indicaciones-->

        <TextView
            android:id="@+id/lblIndicacione"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Indicaciones Médicas"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="20dp"
            android:textSize="21sp"
            android:textColor="#424242"
            android:layout_marginTop="255dp"
            android:layout_marginEnd="21dp" />

        <TextView
            android:id="@+id/indicaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Indicaciones Médicas"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="20dp"
            android:textSize="18sp"
            android:layout_marginTop="290dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_indicaciones"
            android:id="@+id/ic_indicaciones"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="270dp" />

        <!--frecuencia-->

        <TextView
            android:id="@+id/lblFrecuencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frecuencia"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="20dp"
            android:textSize="21sp"
            android:textColor="#424242"
            android:layout_marginTop="360dp"
            android:layout_marginEnd="21dp" />
        <TextView
            android:id="@+id/frecuencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frecuencia"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="20dp"
            android:textSize="18sp"
            android:textColor="#616161"
            android:layout_marginTop="395dp"
            android:layout_marginEnd="21dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_frecuencias"
            android:id="@+id/ic_frecuencia"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="375dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="n"
            android:textSize="1sp"
            android:textColor="#ffffff"
            android:layout_marginBottom="55dp" />

        <Button
            android:text="modificar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/button3" />

        <Button
            android:text="Guardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:layout_below="@+id/frecuencia"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />


    </RelativeLayout>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    </android.support.design.widget.AppBarLayout>


</LinearLayout>