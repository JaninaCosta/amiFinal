<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/lbl_NombreMedicament"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="70dp">

        <EditText
            android:id="@+id/txt_NombreMedicament"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del Medicamento"
            android:textSize="20sp" />
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_pill"
        android:id="@+id/ic_pasti"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/lbl_DiasDeMedicament"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="70dp">

        <EditText
            android:id="@+id/txt_DiasDeMedicament"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contextClickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Días de tratamiento"
            android:textSize="20sp" />
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_dias"
        android:id="@+id/ic_dia"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="130dp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/lbl_dosis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="70dp">

        <EditText
            android:id="@+id/txt_dosis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contextClickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Dosis"
            android:textSize="20sp" />
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_dosis"
        android:id="@+id/ic_dosis"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="200dp"/>

    <!--
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/lbl_dosis"
        android:layout_alignStart="@+id/lbl_dosis"
        android:id="@+id/editText" />-->

    <android.support.design.widget.TextInputLayout
        android:id="@+id/lbl_indicaciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="70dp">

        <EditText
            android:id="@+id/txt_indicaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="5"
            android:hint="Indicaciones Médicas"
            android:textSize="20sp" />
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_indicaciones"
        android:id="@+id/ic_indicaciones"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="270dp"/>

    <Button
        android:text="Siguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSiguiente"
        android:layout_below="@+id/lbl_indicaciones"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@android:color/white"
        android:layout_marginTop="42dp"
        android:textSize="16sp" />


</RelativeLayout>
