<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/lbl_NombreMedicament"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="70dp">

        <EditText
            android:id="@+id/txt_NombreMedicament"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del Medicamento"
            android:textSize="23sp"
            android:fontFamily="sans-serif"
            android:inputType="textCapWords"
            android:maxLength="12"/>
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_pill"
        android:id="@+id/ic_pasti"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp" />

    <!--
    <android.support.design.widget.TextInputLayout
        android:id="@+id/lbl_DiasDeMedicament"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="70dp">

        <EditText
            android:id="@+id/txt_DiasDeMedicament"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contextClickable="false"
            android:inputType="number"
            android:hint="Días de tratamiento"
            android:textSize="23sp"
            android:fontFamily="sans-serif" />
    </android.support.design.widget.TextInputLayout>-->


    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/spinnerLb"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="70dp"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:hint="Días de tratamiento"
        android:textColorHint="#05ab9a"
        app:met_floatingLabel="highlight"
        android:layout_alignEnd="@+id/btnSiguiente" />

    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/spinnerDiasT"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="275dp"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:hint="1"
        android:textColorHint="#05ab9a"
        app:met_floatingLabel="normal" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_dias"
        android:id="@+id/ic_dia"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="130dp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/lbl_dosis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="70dp">

        <EditText
            android:id="@+id/txt_dosis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contextClickable="false"
            android:hint="Dosis diaria"
            android:inputType="number"
            android:textSize="23sp"
            android:maxLength="2"
            android:fontFamily="sans-serif" />
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_dosis"
        android:id="@+id/ic_dosis"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="200dp"/>

    <!--
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/lbl_dosis"
        android:layout_alignStart="@+id/lbl_dosis"
        android:id="@+id/editText" />-->

    <android.support.design.widget.TextInputLayout
        android:id="@+id/lbl_indicaciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="70dp">

        <EditText
            android:id="@+id/txt_indicaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="5"
            android:maxLength="30"
            android:hint="Indicaciones Médicas"
            android:textSize="23sp" />
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_indicaciones"
        android:id="@+id/ic_indicaciones"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="270dp"/>

    <Button
        android:text="Siguiente"
        android:layout_width="150dp"
        android:id="@+id/btnSiguiente"
        android:layout_below="@+id/lbl_indicaciones"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@android:color/white"
        android:layout_marginTop="55dp"
        android:textSize="23sp"
        android:fontFamily="sans-serif"
        android:textAllCaps="false"
        android:layout_height="75dp" />


</RelativeLayout>
